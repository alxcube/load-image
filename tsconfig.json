{
  "compilerOptions": {
    "module": "es2015",
    "target": "es2015",
    "sourceMap": true,
    "types": ["jasmine"],
    "declaration": false,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strict": true,
    "isolatedModules": true,
    "preserveValueImports": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*",
    "spec/**/*"
  ]
}